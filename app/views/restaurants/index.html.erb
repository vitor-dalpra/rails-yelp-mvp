<div class="container-xl">
  <h1 class="p-3">Restaurants</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td> <%= link_to restaurant.name, restaurant_path(restaurant) %></td>
          <td><%= restaurant.category %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-primary w-100' %>
</div>
