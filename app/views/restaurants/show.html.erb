<div class="container-xl p-3">
  <h2 class= "p-3">
    <%= @restaurant.name %>
  </h2>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Stars:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

  <p>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %></li>
    <% end %>
  </ul>
</p>

  <%= link_to 'Back', restaurants_path, class: 'btn btn-primary w-100' %>
</div>
